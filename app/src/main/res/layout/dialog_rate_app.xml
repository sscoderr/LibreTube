<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/rate_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_dialog_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/rate_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_dialog_message"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/rate_dialog_dont_show_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_dialog_dont_show_again"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rate_dialog_exit_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_dialog_exit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rate_dialog_rate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_dialog_rate" />

    </LinearLayout>
</LinearLayout> 